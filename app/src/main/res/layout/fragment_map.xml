<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/app_primary_color">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_peekHeight="50dp"
        android:fillViewport="true"
        app:layout_behavior="@string/bottom_sheet_behavior">
        <com.qmuiteam.qmui.layout.QMUIConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.qmuiteam.qmui.widget.QMUIViewPager
                android:id="@+id/cmpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/home_tab_height"
                android:background="@color/qmui_config_color_gray_4"
                android:fitsSystemWindows="true"
                />


            <com.qmuiteam.qmui.widget.tab.QMUITabSegment
                android:id="@+id/cmtabs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/home_tab_height"
                android:layout_gravity="bottom"
                android:background="@color/qmui_config_color_white"
                android:textSize="12sp"
                app:qmui_tab_icon_position="top"
                app:qmui_tab_normal_text_size="14sp"
                app:qmui_tab_selected_text_size="16sp"
                app:qmui_topDividerColor="?attr/qmui_skin_support_color_separator"
                app:qmui_topDividerHeight="1px" />
        </com.qmuiteam.qmui.layout.QMUIConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>